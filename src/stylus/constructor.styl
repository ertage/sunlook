body.open
	position: fixed
	.modal-holder
		display: block
		
.modal-holder
	position: fixed
	top: 0
	bottom: 0
	left: 0
	right: 0
	background: rgba(0, 0, 0, 0.4)
	display: none
	
.modal
	width: $model_width 
	margin: 80px auto
	
.modal-wrapper
	width: 100% 
	margin: 0 auto
	overflow-y: auto
	overflow-x: hidden
	height: 100%
	
.modal__header
	position: relative
	overflow: hidden
	padding: 16px 24px
	border-bottom: 1px solid $color_lightfray
	color: $color_black
	font-family: $font_additional1_1	
	background-color: $color_white
	
.modal__close
	position: absolute
	right: 24px
	top: 50%
	transform: translateY(-50%)
	font-size: 48px
	border: none
	background: none
	cursor: pointer
	&:focus,
	&:hover,
	&:active
		outline: none
		border: none
		background: none
		
.modal__icon
	display: inline-block;
	transform: rotate(45deg)
	
.modal__title
	font-size: 28px
	line-height: 48px
	
.modal__body
	font-size: 0
	position: relative
	
.modal__sidebar
	width: $sidebar_width
	font-size: 20px
	list-style-type: none
	background-color: $color_bggrey
	display: inline-block
	vertical-align: top
	margin: 0
	padding: 0
	
	&:after
		content: ""
		position: absolute
		top: 0
		bottom: 0
		background-color: $color_bggrey
		width: $sidebar_width
		z-index: -1
	
.modal__sidebar-item
	padding: 16px 32px
	color: $color_black
	border-bottom: 1px solid $color_lightfray
	cursor: pointer
	
	&.active
		background-color: $color_black
		color: $color_white
		
		.options-board
			display: block	

.options-board
	width: 200px
	height: 700px
	overflow-x: hidden
	overflow-y: auto
	padding: 20px
	position: absolute
	top: 0
	left: $sidebar_width 
	background-color: $color_white
	z-index: 1
	display: none

.option
	width: 150px
	height: 150px 
	border: 5px solid $color_lightfray
	text-align: center
	margin-top: 20px
	background-color: $color_bggrey
	
	&:hover
	&.checked
		border-color: $color_yellow
		
	&:first-child
		margin-top: 0
		

.option__img
	height: 100%
	
.modal__content
	width: $model_width - $sidebar_width
	display: inline-block
	vertical-align: top
	background-color: $color_white
	
.model-overlay
	width: 100%
	height: 700px
	background: url('../../src/images/model-bg.jpg') center no-repeat
	background-size: cover;
	position: relative

.model
	background: url('../../src/images/model.png') center no-repeat
	height: 480px
	width: 128px
	position: absolute
	bottom: 65px
	left: 50%
	transform: translateX(-50%)
	
.tabs
	font-size: 20px
	list-style-type: none
	
.tabs__item
	display: inline-block
	
.tabs-content
	font-size: 16px
	
.model__decolette,
.model__skirt
	text-align: center
	
.model__skirt
	margin-top: -20px
	
.model__decolette-img
	margin-top: 40px
	